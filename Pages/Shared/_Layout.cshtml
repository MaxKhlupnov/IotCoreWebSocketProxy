<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IotCoreWebSocketProxy</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container float-left">
                    <ul class="nav nav-tabs" id="mainTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" role="tab" asp-area="" asp-page="/Index">Trace device</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="traceRegistryTab" role="tab" asp-area="" asp-page="/TraceRegistry">Trace registry</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="sendTelemetryTab" role="tab" asp-area="" asp-page="/SendTelemetry">Send telemetry</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="sendCommandTab" role="tab" asp-area="" asp-page="/SendCommand">Send command</a>
                        </li>
                    </ul>
                <a class="navbar-brand" asp-area="" asp-page="https://cloud.yandex.com/docs/iot-core/" target="_blank">Yandex Cloud IotCore</a>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - IotCoreWebSocketProxy - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/signalr.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
